<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/placeholder_color" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="15dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <bitmap
            android:gravity="end"
            android:tint="@color/placeholder_color"
            android:src="@drawable/ic_dropdown_caret" />
    </item>
</layer-list>