<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/semi_dark_grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Splash Screen theme. -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/semi_dark_grey</item>

        <item name="android:autoCompleteTextViewStyle">@style/Widget.AppCompat.Light.AutoCompleteTextView</item>
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
    </style>


    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/semi_dark_grey</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Toolbar.WhiteTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.WhiteToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/text_black</item>
    </style>

    <style name="TokenInfoTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorHighlight</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/WalletTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="ChartTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/mine</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/dp23</item>
        <item name="tabPaddingEnd">@dimen/dp23</item>
        <item name="tabTextAppearance">@style/ChartTabTextAppearance</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="ChartTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dove</item>
        <item name="android:padding">@dimen/dp10</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="WalletTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@drawable/background_tab_layout</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorColor">@color/colorTabHighlight</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/WalletTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorTabHighlight</item>
        <item name="tabTextColor">@android:color/white</item>
    </style>

    <style name="WalletTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SettingsItemSwitchAppearance" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/dove</item>
    </style>

    <style name="MyAddressCopyTextStyle">
        <item name="android:paddingTop">@dimen/dp15</item>
        <item name="android:paddingBottom">@dimen/dp15</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:paddingStart">@dimen/dp24</item>
        <item name="android:paddingEnd">@dimen/dp24</item>
        <item name="android:background">@drawable/background_round_grey_5dp</item>
    </style>

    <style name="TransactionDetailsCopyTextStyle">
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingEnd">@dimen/dp16</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
    </style>

    <style name="TransactionDetailsSubTitleStyle">
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TransactionDetailsStyle">
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="QRScannerTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">@dimen/big_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
    </style>

    <style name="FullscreenBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Button.Fill.Primary" parent="android:Widget">
        <item name="android:background">@drawable/button_round_default</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Button.Border.Primary" parent="android:Widget">
        <item name="android:background">@drawable/button_round_border_default</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/button_colour</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Fill.System" parent="android:Widget">
        <item name="android:background">@drawable/button_round_system</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Border.System" parent="android:Widget">
        <item name="android:background">@drawable/button_round_border_system</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleMaterialAlertDialog.MaterialComponents.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyMaterialAlertDialog.MaterialComponents.Body.Text</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/TitlePaneStyleCenter</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/dove</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="font">@font/font_regular</item>
        <item name="android:font" tools:targetApi="o">@font/font_bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="TitleMaterialAlertDialog.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:font" tools:targetApi="o">@font/font_bold</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="TitlePaneStyleCenter" parent="MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked">
        <item name="android:padding">@dimen/dp16</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="font">@font/font_bold</item>
        <item name="android:font" tools:targetApi="o">@font/font_bold</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="font">@font/font_bold</item>
        <item name="android:font" tools:targetApi="o">@font/font_bold</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
